
@{
    ViewBag.Title = "Index_Category";
    Layout = "~/Views/Shared/_LayoutPage.cshtml";
}

@using DOAN_CLOUND.Models
@model IEnumerable<Category>

<div class="card">
    <div class="card-body">
        <div class="table-responsive">
            <h3>DANH SÁCH LOẠI SẢN PHẨM</h3>

            <table class="table">
                <thead>
                    <tr>
                        <th>Id</th>
                        <th>Tên món</th>
                        <th>Option</th>

                    </tr>
                </thead>
                <tbody>
                    @foreach (var item in Model)
                    {
                        <tr>
                            <td>@item.Id</td>
                            <td>@item.Name</td>
                            <td style="white-space: nowrap">
                                @Html.ActionLink("Details", "Details_Caterory", new { id = item.Id }) |
                                @Html.ActionLink("Edit", "EditCategory", new { id = item.Id }) |
                                @Html.ActionLink("Delete", "DeleteCategory", new { id = item.Id })

                            </td>
                        </tr>
                    }
                    <tr>
                        <td colspan="3">
                            @Html.ActionLink("Create New", "CreateCategory", new { @class = "btn btn-primary" }, new { @class = "btn btn-info" })
                        </td>
                    </tr>
                </tbody>

            </table>
        </div>
    </div>
</div>


